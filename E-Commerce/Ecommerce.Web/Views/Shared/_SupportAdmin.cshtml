@using Ecommerce.Domain.Models
@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager

<script>

  document.addEventListener("DOMContentLoaded", function () {
    const userIdInput = document.querySelector("#userId");
    if (!userIdInput) {
      console.error("Elemento #userId no encontrado.");
      return;
    }

    var adminId = userIdInput.value;

    // Iniciar conexiÃ³n de SignalR
    connection.start().then(() => {
      connection.invoke("Register", adminId, "Admin");
      console.log("Admin registrado en el Hub");
    }).catch(err => console.error("Error al conectar con el Hub:", err.toString()));
  });
  
</script>