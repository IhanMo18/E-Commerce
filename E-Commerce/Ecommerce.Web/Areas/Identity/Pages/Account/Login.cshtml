<link rel="stylesheet" href="@Url.Content("~/client-assets/css/site.css")" asp-append-version="true" />
<link rel="stylesheet" href="@Url.Content("~/client-assets/css/styles.css")" asp-append-version="true" />
<link rel="stylesheet" href="@Url.Content("~/client-assets/css/LoginCss.css")" asp-append-version="true" />

 <div class="login-wrapper">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <img src="https://images.unsplash.com/photo-1633409361618-c73427e4e206?fit=crop&w=80&h=80" class="rounded-circle mb-3" alt="Logo">
                                <h2 class="fw-bold">Welcome Back</h2>
                                <p class="text-muted">Please login to your account</p>
                            </div>
                            
                            <form id="account" method="post" class="needs-validation" novalidate>
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Username" autocomplete="username" class="form-control" id="email" placeholder="name@example.com" required>
                                    <label  asp-for="Input.Username" ><i class="bi bi-envelope me-2"></i>Username</label>
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 password-field">
                                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" class="form-control" id="password" placeholder="Password" required>
                                    <label asp-for="Input.Password" for="password"><i class="bi bi-lock me-2"></i></label>
                                    <button type="button" class="btn toggle-password" aria-label="Toggle password visibility">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <label class="form-check">
                                        <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="remember">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                    <a  asp-page="./ForgotPassword" id="forgot-password">Forgot Password?</a>
                                </div>
                                <button class="btn btn-primary w-100 mb-3" type="submit">
                                    <span class="spinner-border spinner-border-sm d-none me-2" role="status"></span>
                                    Login
                                </button>
                                <div class="social-login text-center">
                                    <p class="text-muted mb-3">Or login with</p>
                                    <div class="d-flex justify-content-center gap-3 mb-4">
                                        <button type="button" class="btn btn-outline-secondary"><i class="bi bi-google"></i></button>
                                        <button type="button" class="btn btn-outline-secondary"><i class="bi bi-facebook"></i></button>
                                    </div>
                                </div>
                            </form>
                            <div class="text-center">
                                <p class="mb-0">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="signup-link">Sign up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
