 <div class="login-wrapper">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <img src="https://images.unsplash.com/photo-1633409361618-c73427e4e206?fit=crop&w=80&h=80" class="rounded-circle mb-3" alt="Logo">
                                <h2 class="fw-bold">Create Account</h2>
                                <p class="text-muted">Please complete to create your account</p>
                            </div>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="signUpForm" class="needs-validation" novalidate>
                                
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Username" type="text" autocomplete="username" class="form-control" id="username" placeholder="Username" required>
                                    <label asp-for="Input.Username" for="username"><i class="bi bi-person me-2"></i>Username</label>
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" type="email" class="form-control" id="email" placeholder="name@example.com" required>
                                    <label  asp-for="Input.Email" for="email"><i class="bi bi-envelope me-2"></i>Email address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3 password-field">
                                    <input asp-for="Input.Password" type="password" autocomplete="new-password" class="form-control" id="password" placeholder="Password" required>
                                    <label  asp-for="Input.Password" for="password"><i class="bi bi-lock me-2"></i>Password</label>
                                    <button type="button" class="btn toggle-password" aria-label="Toggle password visibility">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                
                                <div class="form-floating mb-3 password-field">
                                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="form-control" id="password" placeholder="Password" required>
                                    <label  asp-for="Input.ConfirmPassword" for="password"><i class="bi bi-lock me-2"></i>Confirm Password</label>
                                    <button type="button" class="btn toggle-password" aria-label="Toggle password visibility">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                                <button id="registerSubmit" class="btn btn-primary w-100 mb-3" type="submit">
                                    <span class="spinner-border spinner-border-sm d-none me-2" role="status"></span>
                                    Create Account
                                </button>
                                <div class="social-login text-center">
                                    <p class="text-muted mb-3">Or sign up with</p>
                                    <div class="d-flex justify-content-center gap-3 mb-4">
                                        <button type="button" class="btn btn-outline-secondary"><i class="bi bi-google"></i></button>
                                        <button type="button" class="btn btn-outline-secondary"><i class="bi bi-facebook"></i></button>
                                    </div>
                                </div>
                            </form>
                            <div class="text-center">
                                <p class="mb-0">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="signin-link">Sign in</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
